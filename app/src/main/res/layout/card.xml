<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/subjectname"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="Subject Name"
                    android:textColor="@android:color/holo_purple"
                    android:textFontWeight="1000"
                    android:textSize="20dp"/>

                <View
                    android:id="@+id/hline"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/subjectname"
                    android:background="#FF000000" />
                <ImageView
                    android:id="@+id/iconperson"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person"
                    android:layout_below="@id/hline"
                    />
                <TextView
                    android:id="@+id/teachername"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/hline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/iconperson"
                    android:text="Lokesh"/>

                <Button
                    android:id="@+id/delete"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:text="Delete"
                    android:layout_alignParentRight="true" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="80dp"
                    android:layout_toRightOf="@id/teachername"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/locationicon"
                    android:layout_below="@id/hline"
                    android:src="@drawable/iconlocation"
                    />
                <TextView
                    android:id="@+id/block"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/locationicon"
                    android:layout_below="@id/hline"
                    android:text="Block"
                    />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/timeicon"
                    android:layout_below="@id/iconperson"
                    android:src="@drawable/time"
                    />
                <TextView
                    android:id="@+id/timepic"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/teachername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/iconperson"
                    android:text="Time"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
